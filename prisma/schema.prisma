// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String           @id @default(cuid())
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  email      String           @unique
  passeword  String
  userName   String
  role       Role             @default(USER)
  image      String?
  addedGames BucketListGame[]
  theme      Theme            @default(RED)
}

enum Role {
  ADMIN
  USER
  RANGER
}

enum Theme {
  RED
  GREEN
  BLUE
  BLACK
  WHITE
  PURPLE
}

model BucketListGame {
  id          String    @id @default(cuid())
  userId      String
  title       String
  category    String[]
  gameCover   String
  mood        String?
  infos       String?
  releaseDate DateTime?
  addedAt     DateTime  @default(now())
  addedBy     User      @relation(fields: [userId], references: [id])
  updatedAt   DateTime  @updatedAt
  updatedBy   String?
  isPlayed    Boolean   @default(false)
  isSolo      Boolean   @default(false)
  links       Link[]
}

model Link {
  id     String         @id @default(uuid())
  gameId String
  link   String         @default("no mood")
  title  String
  game   BucketListGame @relation(fields: [gameId], references: [id])
}
